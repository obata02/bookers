<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation" class="error">
    <h2 class="error-h2"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@book, local:true do |f| %>
<div>
  <label>Title</label>
  <%= f.text_field :title %>
</div>

<div>
  <label>Body</label>
  <%= f.text_area :body %>
</div>

<div><%= f.submit 'Update Book' %></div>

<a href="/books/<%= @book.id %>">Show</a>
|
<a href="/books">Back</a>
<% end %>
